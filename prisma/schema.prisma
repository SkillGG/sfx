// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider        = "prisma-client-js"
    previewFeatures = ["typedSQL"]
}

datasource db {
    provider  = "postgresql"
    url       = env("DATABASE_URL")
    directUrl = env("DIRECT_URL")
}

model Onomatopoeia {
    id Int @id @default(autoincrement())

    text String
    read String?
    def  String

    extra String?

    info String?

    searchread  String?
    searchdef   String
    searchextra String?

    language   Language @relation(fields: [languageId], references: [id])
    languageId String

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    featured Boolean @default(false)

    ogTranslations Translation[] @relation("ogSFX")
    tlTranslations Translation[] @relation("tlSFX")

    @@index([text])
    @@index([searchread])
    @@index([searchdef])
    @@index([searchextra])
    @@index([languageId])
}

model Translation {
    id Int @id @default(autoincrement())

    sfx1Id Int
    ogSFX  Onomatopoeia @relation("ogSFX", fields: [sfx1Id], references: [id], onDelete: Cascade, onUpdate: Cascade)

    sfx2Id Int
    tlSFX  Onomatopoeia @relation("tlSFX", fields: [sfx2Id], references: [id], onDelete: Cascade, onUpdate: Cascade)

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    additionalInfo String?

    @@index([sfx1Id])
    @@index([sfx2Id])
}

model Language {
    id           String         @id
    name         String
    Onomatopoeia Onomatopoeia[]
}

model UserSession {
    id Int @id @default(autoincrement())

    createdAt     DateTime @default(now())
    lastUpdatedAt DateTime @default(now())
    maxTime       Int      @default(1800000) // 30 mins

    token String @unique @default(uuid())

    username String @unique
}
