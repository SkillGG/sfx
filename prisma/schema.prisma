generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider  = "postgresql"
    url       = env("DATABASE_URL")
    directUrl = env("DIRECT_URL")
}

model Onomatopoeia {
    id Int @id @default(autoincrement())

    text String
    read String?
    def  String

    extra String?

    language String

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    ogTranslations Translation[] @relation("ogSFX")
    tlTranslations Translation[] @relation("tlSFX")

    prime Boolean

    @@index([text])
    @@index([read])
}

model Translation {
    id Int @id @default(autoincrement())

    sfx1Id Int
    ogSFX  Onomatopoeia @relation("ogSFX", fields: [sfx1Id], references: [id], onDelete: Cascade, onUpdate: Cascade)

    sfx2Id Int
    tlSFX  Onomatopoeia @relation("tlSFX", fields: [sfx2Id], references: [id], onDelete: Cascade, onUpdate: Cascade)

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    additionalInfo String?

    @@index([sfx1Id])
    @@index([sfx2Id])
}

model UserSession {
    id Int @id @default(autoincrement())

    createdAt DateTime @default(now())
    maxTime   Int      @default(1800000) // 30 mins

    token String @unique @default(uuid())

    username String @unique
}
